{
  "name": "commitview",
  "displayName": "CommitView",
  "description": "Jump to any commit in a separate window without leaving your current work",
  "version": "0.1.1",
  "publisher": "ekko-sh",
  "icon": "icon.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ekko-sh/commitview"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "SCM Providers",
    "Other"
  ],
  "keywords": [
    "git",
    "worktree",
    "commit",
    "diff",
    "history",
    "compare"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "workspaceContains:.git"
  ],
  "contributes": {
    "commands": [
      {
        "command": "commitview.selectCommit",
        "title": "View Commit in New Window",
        "category": "CommitView",
        "icon": "$(git-commit)"
      },
      {
        "command": "commitview.viewCommit",
        "title": "View This Commit",
        "category": "CommitView",
        "icon": "$(link-external)"
      },
      {
        "command": "commitview.quickSwitch",
        "title": "Switch to Partner Window",
        "category": "CommitView",
        "icon": "$(arrow-swap)"
      },
      {
        "command": "commitview.showDiffSummary",
        "title": "Show Diff Summary",
        "category": "CommitView",
        "icon": "$(diff)"
      },
      {
        "command": "commitview.closeWorktree",
        "title": "Close and Cleanup Worktree",
        "category": "CommitView",
        "icon": "$(close)"
      },
      {
        "command": "commitview.cleanupAll",
        "title": "Cleanup All CommitView Worktrees",
        "category": "CommitView",
        "icon": "$(trash)"
      },
      {
        "command": "commitview.refreshCommits",
        "title": "Refresh Commit List",
        "category": "CommitView",
        "icon": "$(refresh)"
      }
    ],
    "keybindings": [
      {
        "command": "commitview.selectCommit",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v",
        "when": "gitOpenRepositoryCount > 0"
      },
      {
        "command": "commitview.quickSwitch",
        "key": "ctrl+shift+s",
        "mac": "cmd+ctrl+s"
      },
      {
        "command": "commitview.showDiffSummary",
        "key": "ctrl+shift+d",
        "mac": "cmd+shift+d",
        "when": "commitview.isWorktreeWindow"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "commitview",
          "title": "CommitView",
          "icon": "$(git-compare)"
        }
      ]
    },
    "views": {
      "commitview": [
        {
          "id": "commitview.commits",
          "name": "Commits",
          "contextualTitle": "Recent Commits"
        },
        {
          "id": "commitview.activeWorktrees",
          "name": "Active Worktrees",
          "contextualTitle": "Open Worktrees"
        }
      ],
      "scm": [
        {
          "id": "commitview.diffSummary",
          "name": "CommitView Diff",
          "when": "commitview.isWorktreeWindow",
          "contextualTitle": "Changed Files"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "commitview.commits",
        "contents": "Loading commits...",
        "when": "commitview.loading"
      },
      {
        "view": "commitview.commits",
        "contents": "No git repository found.\n\nOpen a folder with a git repository to see commits.",
        "when": "!gitOpenRepositoryCount"
      },
      {
        "view": "commitview.activeWorktrees",
        "contents": "No active worktrees.\n\nClick on a commit above to view it in a new window."
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "commitview.selectCommit",
          "when": "gitOpenRepositoryCount > 0"
        },
        {
          "command": "commitview.quickSwitch"
        },
        {
          "command": "commitview.showDiffSummary",
          "when": "commitview.isWorktreeWindow"
        },
        {
          "command": "commitview.closeWorktree",
          "when": "commitview.isWorktreeWindow"
        },
        {
          "command": "commitview.viewCommit",
          "when": "false"
        }
      ],
      "view/title": [
        {
          "command": "commitview.refreshCommits",
          "when": "view == commitview.commits",
          "group": "navigation"
        },
        {
          "command": "commitview.cleanupAll",
          "when": "view == commitview.activeWorktrees",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "commitview.viewCommit",
          "when": "view == commitview.commits && viewItem == commit",
          "group": "inline"
        },
        {
          "command": "commitview.quickSwitch",
          "when": "view == commitview.activeWorktrees && viewItem == worktree",
          "group": "inline"
        },
        {
          "command": "commitview.closeWorktree",
          "when": "view == commitview.activeWorktrees && viewItem == worktree",
          "group": "inline"
        }
      ],
      "scm/title": [
        {
          "command": "commitview.selectCommit",
          "group": "navigation",
          "when": "scmProvider == git"
        }
      ],
      "editor/title": [
        {
          "command": "commitview.selectCommit",
          "group": "navigation",
          "when": "gitOpenRepositoryCount > 0 && resourceScheme == file"
        },
        {
          "command": "commitview.quickSwitch",
          "group": "navigation",
          "when": "commitview.isWorktreeWindow"
        }
      ]
    },
    "configuration": {
      "title": "CommitView",
      "properties": {
        "commitview.maxCommitHistory": {
          "type": "number",
          "default": 50,
          "description": "Maximum number of commits to show in the sidebar"
        },
        "commitview.autoCleanupOnClose": {
          "type": "boolean",
          "default": true,
          "description": "Automatically cleanup worktree when VS Code window closes"
        },
        "commitview.filesToCopy": {
          "type": "array",
          "default": [
            ".env",
            ".env.*",
            ".npmrc",
            ".yarnrc",
            ".nvmrc"
          ],
          "description": "File patterns to copy from original repo to worktree"
        },
        "commitview.additionalFilesToCopy": {
          "type": "array",
          "default": [],
          "description": "Additional file patterns to copy (added to default list)"
        },
        "commitview.warnOnSecretsCopy": {
          "type": "boolean",
          "default": true,
          "description": "Show warning dialog before copying files that might contain secrets"
        },
        "commitview.secretsPatterns": {
          "type": "array",
          "default": [
            "*secret*",
            "*credential*",
            "*key*",
            "*token*",
            "*password*"
          ],
          "description": "File patterns that trigger a security warning before copying"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "simple-git": "^3.21.0"
  }
}
